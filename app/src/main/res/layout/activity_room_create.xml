<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#252525"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    tools:context=".RoomCreateActivity">

    <TextView
        android:textColor="#FFF"
        android:id="@+id/themeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/theme_label" />

    <EditText
        android:textColor="#FFF"
        android:id="@+id/themeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/themeTextView"
        android:layout_alignParentStart="true"
        android:gravity="top"
        android:inputType="text"
        android:maxLength="12" />

    <TextView
        android:textColor="#FFF"
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/themeText"
        android:layout_alignParentStart="true"
        android:text="@string/room_detail" />

    <EditText
        android:textColor="#FFF"
        android:id="@+id/detailText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_alignParentStart="true"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:maxLength="25" />

    <TextView
        android:textColor="#FFF"
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/detailText"
        android:layout_alignParentStart="true"
        android:text="@string/image_view_label" />

    <ImageView
        android:id="@+id/roomIcon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:background="#d3d3d3" />

    <Button
        android:textColor="#FFF"
        android:id="@+id/createButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/roomIcon"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/my_button"
        android:text="@string/create_room_button_label"/>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/createButton"
        android:layout_centerInParent="true"
        android:visibility="gone" />

</RelativeLayout>